@model IEnumerable<AutoCurriculum.Models.Topic>
@{
    ViewData["Title"] = "Danh sách giáo trình";
}

<div class="container mt-5">
    <div class="card shadow-sm mb-5">
        <div class="card-body text-center p-5">
            <h1 class="text-primary mb-3">Hệ Thống Tạo Giáo Trình</h1>
            <p class="text-muted">Nhập chủ đề bạn muốn học (Ví dụ: Python, ReactJS...)</p>

            <form id="formCreateTopic" class="d-flex justify-content-center mt-4">
                <input type="text" id="txtTopicName" name="topicName" class="form-control w-50 me-2" placeholder="Nhập chủ đề..." required />
                <button type="submit" class="btn btn-primary px-4">Tạo Ngay</button>
            </form>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-3 d-inline-block">
                    @TempData["Message"]
                </div>
            }
        </div>
    </div>

    <h3 class="mb-3 border-start border-4 border-primary ps-3">Lịch Sử Tạo Giáo Trình</h3>

    <table class="table table-hover border">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Tên Chủ Đề</th>
                <th>Ngày Tạo</th>
                <th>Trạng Thái</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody id="tableBodyTopics">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TopicId</td>
                        <td class="fw-bold text-primary">@item.TopicName</td>
                        <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td><span class="badge bg-secondary">Mới tạo</span></td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.TopicId" class="btn btn-sm btn-outline-info">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center py-4 text-muted">
                        Chưa có dữ liệu. Hãy nhập chủ đề đầu tiên!
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Bắt sự kiện khi người dùng bấm nút Submit form
            $("#formCreateTopic").submit(function (e) {
                e.preventDefault(); // 1. CHẶN KHÔNG CHO RELOAD TRANG

                var topicName = $("#txtTopicName").val(); // Lấy giá trị ô nhập

                // 2. Gửi Ajax
                $.ajax({
                    url: '/Curriculum/Generate', // Gọi đến hàm Generate trong Controller
                    type: 'POST',
                    data: { topicName: topicName },
                    success: function (response) {
                        // 3. Xử lý khi thành công
                        if (response.success) {
                            var t = response.data;

                            // Tạo một dòng HTML mới
                            var newRow = `
                                <tr class="table-success"> <td>${t.id}</td>
                                    <td class="fw-bold text-primary">${t.name}</td>
                                    <td>${t.date}</td>
                                    <td><span class="badge bg-success">Vừa tạo xong</span></td>
                                    <td>
                                        <a href="/Curriculum/Details/${t.id}" class="btn btn-sm btn-outline-info">Xem chi tiết</a>
                                    </td>
                                </tr>
                            `;

                            // Chèn dòng mới vào ĐẦU bảng
                            $("#tableBodyTopics").prepend(newRow);

                            // Xóa trắng ô nhập liệu
                            $("#txtTopicName").val('');

                            // Hiện thông báo nhỏ (Optional)
                            alert(response.message);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Có lỗi xảy ra khi gọi Server!");
                    }
                });
            });
        });
    </script>
}